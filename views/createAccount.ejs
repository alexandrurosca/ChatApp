<html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script>

</script>
<head>
    <title>Chat me!</title>
    <link rel="stylesheet" href="../stylesheets/style.css">

</head>
<body>
<div id="logo">  <img src="../images/logo.png" style="max-width:100%;height:auto;"/> </div>
<div id="log">
    <form action="/createAccount/uploadPicture" method="POST" enctype="multipart/form-data">
        <input id="firstName" name="firstName" type="text" placeholder="Prenume">
        <input id="lastName" name="lastName" type="text" placeholder="Nume">
        <input id="CNP" name="CNP" type="number" placeholder="CNP">
        <input id="userName" name="userName" type="text" placeholder="User name">
        <input id="password" name="password" type="password" placeholder="Parola">
        <div class="file-upload">
            <div class="file-select">
                <div class="file-select-button" id="fileName">Alege o imagine</div>
                <div class="file-select-name" id="noFile">Nici o imagine aleasa...</div>
                <input type="file" name="picture" accept="application/x-zip-compressed,image/*" id="chooseFile">
            </div>
        </div>
        <button id="cAcc">Create Account</button>
    </form>

</div>

<div id="errors">
    <% for(var i=0; i < error.length; i++) { %>
    &#8227; <%= error[i].msg %><br>
    <% } %>
</div>
<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script src="/JS/createAcc.js"></script>
<script>window.scrollTo(0,document.body.scrollHeight);</script>
</body>
</html>
</html>