<div class="col-3 friendList" id="friendsList">
</div>
<div class="row">
    <div class="col-9 buttons" id='options'>
         <div class="col-2 text" ><b>Admin</b></div>
        <div class="col-2 button" >
            <input  class='change' id= 'logOut' name="logOut" type="button" value="Log Out">
        </div>
    </div>

    <div class="col-6" id='chat'>
        <div id='msg'>
            <ul id="messages"></ul>
        </div>
        <form id='chat' action="" method="post">
            <input id="m" autocomplete="off" /><button id='chatB' >Send</button>
        </form>
    </div>

    <div id="log" class="col-3">
        <form action="/admin/uploadPicture" method="POST" enctype="multipart/form-data">
